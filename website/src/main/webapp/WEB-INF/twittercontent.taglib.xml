<?xml version="1.0"?>
<!DOCTYPE facelet-taglib PUBLIC
  "-//Sun Microsystems, Inc.//DTD Facelet Taglib 1.0//EN"
  "http://java.sun.com/dtd/facelet-taglib_1_0.dtd">

<facelet-taglib>
    <namespace>http://craschka.de/twitter</namespace>

   <tag>
      <tag-name>twittercontent</tag-name>
      	<handler-class>de.craschka.twitter.TwitterContent</handler-class>
   </tag>
    <tag>
        <tag-name>twitterlink</tag-name>
        <component>
            <component-type>de.craschka.twitter.TwitterLink</component-type>
            <renderer-type>de.craschka.twitter.TwitterLinkRenderer</renderer-type>
        </component>
    </tag>
    
</facelet-taglib>